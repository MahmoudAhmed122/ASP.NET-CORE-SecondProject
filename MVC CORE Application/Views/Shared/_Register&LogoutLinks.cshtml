@using Microsoft.AspNetCore.Identity
@using MVC_CORE.DDL.Entities;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-controller="Account" asp-action="SignOut"> SignOut</a>
        </li>
    }
 
</ul>